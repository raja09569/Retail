<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crazymin2.retailstore">

    <application
        android:name="com.crazymin2.retailstore.ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Retailstore">

        <activity android:name=".home.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Retailstore.Home"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:screenOrientation="portrait"
            android:name=".ui.ProductActivity"
            android:label="@string/title_product_detail"
            android:theme="@style/Theme.Retailstore.Product"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:screenOrientation="portrait"
            android:name=".cart.CartActivity"
            android:label="@string/title_cart_detail"
            android:theme="@style/Theme.Retailstore.Product"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:screenOrientation="portrait"
            android:name=".Favourite.FavActivity"
            android:label="@string/description_fav"
            android:theme="@style/Theme.Retailstore.Product"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:screenOrientation="portrait"
            android:name=".ui.AddCartDialogActivity"
            android:label="@string/title_product_detail"
            android:theme="@style/Theme.Retailstore.Dialog"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>


    </application>

</manifest>
